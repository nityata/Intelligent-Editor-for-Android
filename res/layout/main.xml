<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<FrameLayout android:layout_width="180px" android:layout_height="195px" android:id="@+id/mainFrame">
</FrameLayout>
	
<Button android:layout_width="60px" android:id="@+id/enter" android:layout_marginTop="5px" android:layout_height="wrap_content"  android:background="@drawable/enter"  android:layout_below="@id/mainFrame" ></Button>
<Button android:layout_width="60px" android:id="@+id/clear" android:layout_marginTop="5px" android:layout_height="wrap_content"  android:layout_below="@id/mainFrame" android:background="@drawable/clear"  android:layout_toRightOf="@id/enter"></Button>  
<Button android:layout_width="60px" android:id="@+id/add" android:layout_marginTop="5px" android:layout_height="wrap_content" android:background="@drawable/add"  android:layout_toRightOf="@id/clear" android:layout_below="@id/mainFrame"></Button>
  

<TextView android:layout_marginTop="10px" android:layout_marginLeft="60px" android:layout_width="100px" android:id="@+id/inType" android:layout_height="wrap_content" android:text="Input Type" android:layout_below="@id/enter" />
