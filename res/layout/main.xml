<Button  android:layout_width="40px" android:id="@+id/capsOn" android:layout_marginTop="10px" android:layout_height="40px" android:background="@drawable/upper3"  android:layout_below="@id/inType" ></Button>
<Button  android:layout_marginLeft="5px" android:layout_width="45px" android:id="@+id/capsOff" android:layout_marginTop="10px" android:layout_height="45px" android:background="@drawable/lower2"  android:layout_below="@id/inType" android:layout_toRightOf="@id/capsOn"></Button>
<Button  android:layout_marginLeft="5px" android:layout_width="40px" android:id="@+id/symOn" android:layout_marginTop="10px" android:layout_height="40px" android:background="@drawable/symbol2"  android:layout_below="@id/inType" android:layout_toRightOf="@id/capsOff"></Button>
<Button  android:layout_width="45px" android:id="@+id/numOn" android:layout_marginTop="5px" android:layout_height="55px" android:background="@drawable/number2"  android:layout_below="@id/inType" android:layout_toRightOf="@id/symOn"></Button>

<AutoCompleteTextView android:id="@+id/autocomplete_keywords"
        android:layout_height="40px"
        android:layout_width="120px" android:layout_toRightOf="@id/mainFrame" />
        
	
<TextView android:id="@+id/console"
        android:layout_height="40px"
        android:layout_width="180px" android:layout_toRightOf="@id/autocomplete_keywords" android:layout_marginLeft="2px"/>
        
<Button android:layout_width="60px" android:id="@+id/clearFile" android:layout_height="40px" android:background="@drawable/clear2"   android:layout_toRightOf="@id/console" ></Button>
<Button android:layout_width="60px" android:id="@+id/newLine" android:layout_height="40px"  android:background="@drawable/enter2"   android:layout_toRightOf="@id/clearFile"  ></Button>
<Button android:layout_width="60px" android:id="@+id/semiColon" android:layout_height="40px"  android:background="@drawable/semi2" android:layout_toRightOf="@id/newLine" ></Button>
   
	
<TextView android:layout_width="470px" android:textColor="#ffffff" android:background="#bebebe" android:layout_height="255px" android:layout_marginLeft="5px" android:id="@+id/prog" android:layout_below="@id/autocomplete_keywords" android:layout_toRightOf="@id/mainFrame"/>
<Button android:layout_width="60px" android:id="@+id/newFile" android:layout_height="40px" android:layout_marginTop="5px" android:background="@drawable/new2"  android:layout_below="@id/prog" android:layout_toRightOf="@id/mainFrame" ></Button>  
<Button android:layout_width="60px" android:id="@+id/saveFile" android:layout_height="40px" android:layout_marginTop="5px" android:background="@drawable/save3" android:layout_below="@id/prog" android:layout_toRightOf="@id/newFile" ></Button>
<Button android:layout_width="60px" android:id="@+id/loadFile" android:layout_height="40px" android:layout_marginTop="5px" android:background="@drawable/upload"  android:layout_below="@id/prog" android:layout_toRightOf="@id/saveFile" ></Button>
</RelativeLayout>